<div class="card mt-3">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card-header text-center">
    <h3>Log in</h3>
  </div>
  <div class="card-body">
    
  <div class="mb-3">
    <%= f.label :email, class:"form-label" %>
    <%= f.email_field :email, class:"form-control", placeholder:"Your email address" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class:"form-label" %>
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password", placeholder:"Your password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-1">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  </div>
  <div class="card-footer text-muted">
      <div class="actions">
    <%= f.submit 'Log in', class:"btn btn-outline-success mb-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>





